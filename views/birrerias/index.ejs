<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Bienvenidos a la Birrería!</h1>
      <p>Visite las mejores cervecerías de Buenos Aires</p>
      <p>
          <a class="btn btn-primary btn-lg" href="/a/birrerias/new">Agregar una cervecería</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap:wrap;" >
    <div class="col-lg-12">
      <h3>Cervecerías más populares</h3>
    </div>

    <% birrerias.forEach(function(birreria) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <image src=<%=birreria.image%>></image>
              <div class="caption">
                <h4> <%= birreria.name %> </h4>
              </div>
              <p>
                <a href="/a/birrerias/<%=birreria._id%>" class="btn btn-primary">Más Info</a>
              </p>
            </div>
            
            
          </div>
    <% }); %>
  </div>


</div>

<% include ../partials/footer %>