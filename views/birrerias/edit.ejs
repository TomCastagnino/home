<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Editar <%=birreria.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/a/birrerias/<%=birreria._id%>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="birreria[name]" value="<%=birreria.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="birreria[price]" value="<%=birreria.value%>" min="1.00" step="1.00">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="birreria[direccion]" value="<%=birreria.direccion%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="birreria[image]" value="<%=birreria.image%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="birreria[description]" value="<%=birreria.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Enviar!</button>
        </div>
      </form>
      <a href="/a/birrerias">Volver</a>
    </div>
  </div>
</div>


<% include ../partials/footer %>